<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1B5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#302F2F"
        android:text="="
        app:layout_constraintStart_toStartOf="@+id/btnMinus"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_9" />

    <Button
        android:id="@+id/btnDigit_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:text="9"
        app:layout_constraintStart_toStartOf="@+id/btnDigit_6"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_8" />

    <Button
        android:id="@+id/btnDigit_8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:text="8"
        app:layout_constraintStart_toStartOf="@+id/btnDigit_5"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_7" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#CC7B34"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/btnPlus"
        app:layout_constraintStart_toStartOf="@+id/btnPlus"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_6" />

    <Button
        android:id="@+id/btnDigit_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:text="5"
        app:layout_constraintStart_toStartOf="@+id/btnDigit_2"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_4" />

    <Button
        android:id="@+id/btnDigit_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:text="6"
        app:layout_constraintStart_toStartOf="@+id/btnDigit_3"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_5" />

    <Button
        android:id="@+id/btnDigit_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:autoSizeTextType="uniform"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/btnDigit_1"
        app:layout_constraintTop_toBottomOf="@+id/btnDigit_1" />

    <Button
        android:id="@+id/btnDigit_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:autoSizeTextType="uniform"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnDigit_4"
        app:layout_constraintTop_toBottomOf="@+id/btnDigit_4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#CC7B34"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/btnMult"
        app:layout_constraintStart_toStartOf="@+id/btnMult"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_3" />

    <Button
        android:id="@+id/btnDigit_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:text="2"
        app:layout_constraintStart_toStartOf="@+id/btnDigit_0"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_1" />

    <Button
        android:id="@+id/btnDigit_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:autoSizeTextType="uniform"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/btnClear" />

    <Button
        android:id="@+id/btnDigit_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:text="3"
        app:layout_constraintStart_toStartOf="@+id/btnDivide"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_2" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#CC7B34"
        android:text="*"
        app:layout_constraintEnd_toEndOf="@+id/tvResult"
        app:layout_constraintTop_toTopOf="@+id/btnDivide" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#CC7B34"
        android:text="/"
        app:layout_constraintEnd_toStartOf="@+id/btnMult"
        app:layout_constraintTop_toTopOf="@+id/btnDigit_0" />

    <Button
        android:id="@+id/btnDigit_0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#FF6750A4"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/btnDivide"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/btnClear"
        app:layout_constraintTop_toTopOf="@+id/btnClear" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#9E5959"
        android:text="C"
        app:layout_constraintStart_toStartOf="@+id/tvResult"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <TextView
        android:id="@+id/tvOperand"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:autoSizeTextType="uniform"
        android:background="#E4DEDE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toStartOf="@+id/edRightNumber"
        app:layout_constraintStart_toEndOf="@+id/edLeftNumber"
        app:layout_constraintTop_toTopOf="@+id/edRightNumber" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="366dp"
        android:layout_height="58dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:autoSizeTextType="uniform"
        android:background="#C0C5BB"
        android:text="Result"
        app:layout_constraintEnd_toEndOf="@+id/edRightNumber"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="@+id/edLeftNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvOperand" />

    <EditText
        android:id="@+id/edLeftNumber"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="text"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edRightNumber"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="text"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edLeftNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>